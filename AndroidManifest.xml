<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.phicomm.phifacialrecognition"
    android:versionCode="1"
    android:versionName="1.0" >


    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true" >
        <activity
            android:name="com.phicomm.phifacialrecognition.FacialRecognitionActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.phicomm.phifacialrecognition.AddPhoto"
            android:label="@string/title_activity_add_photo"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.phicomm.phifacialrecognition.ImageConfirmation"
            android:label="@string/title_activity_image_confirmation" >
        </activity>
        <activity
            android:name="com.phicomm.phifacialrecognition.ChooseUser"
            android:label="@string/title_activity_choose_user" >
        </activity>
        <activity
            android:name="com.phicomm.phifacialrecognition.LiveRecognition"
            android:label="@string/title_activity_live_recognition"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
